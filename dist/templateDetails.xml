<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="3.3" type="template" client="site" method="upgrade">
	
	<!-- Version -->
	<name>rgaac3rb</name>
	<version>0.0.1</version>
	<creationDate>20-01-2015</creationDate>
	<author>C3rb Informatique</author>
	<copyright>Copyright © 2015 c3rb.org</copyright>
	<authorEmail>orphee@c3rb.fr</authorEmail>
	<authorUrl>http://www.c3rb.org</authorUrl>
	<description><![CDATA[ 
		<hr />
		<h1 style="text-align:left;">C3rb - RGAA - haaaa!</h1>
		<p style="text-align:left">Created by <a href="http://www.c3rb.org" target="_blank">C3rb Informatique | c3rb.org</a>.<br />
		Ruzafa Mikaël / Andurand Ariane / Espié Vincent / Cabrol Cyril
	</p>
	<hr />
	]]></description>
	
	<!-- Langue -->
	<languages folder="languages">
		<language tag="fr-FR">fr-FR/fr-FR.tpl_rgaac3rb.ini</language> 
		<language tag="fr-FR">fr-FR/fr-FR.tpl_rgaac3rb.sys.ini</language>
	</languages>

	<!-- Arborescence -->
	<files>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>languages</folder>
		<folder>layout</folder>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<!-- Position du template -->
	<positions>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>debug</position>
	</positions>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="sitetitle" type="text" default="TPL_RGAAC3RB_FIELD_SITETITLE_DEFAULT" label="TPL_RGAAC3RB_FIELD_SITETITLE_LABEL" description="TPL_BEEZ3_FIELD_LOGO_DESC" />
			</fieldset>  
			<fieldset name="advanced">
				<field name="tmplhelp" type="radio" label="TPL_RGAAC3RB_CHECK_TMPLHELP_LABEL" default="0">
				    <option value="0">JNO</option>
				    <option value="1">JYES</option>
				</field>
				<hr />			
			</fieldset>  
		</fields>
	</config>
</extension>
